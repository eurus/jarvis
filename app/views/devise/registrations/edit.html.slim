h2.text-center.sign-in-margin = t("修改密码")
.col-md-3
.col-md-6
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = f.input :password, autocomplete: "off",required: false, input_html:{class:"form-control"},label: "新密码"
    = f.input :password_confirmation, required: false, input_html:{class:"form-control"},label: "确认新密码"
    = f.input :current_password,  required: true, input_html:{class:"form-control"},label: "旧密码"
    .form-group
      = f.submit "更新", class: "btn btn-primary btn-block"
